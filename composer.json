{
    "name": "yossef-ashraf/quickcommunication",
    "description": "Comprehensive multi-channel communication package",
    "type": "library",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^10.0",
        "guzzlehttp/guzzle": "^7.7",
        "twilio/sdk": "^7.4",
        "symfony/mailer": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "Communication\\": "/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Communication\\CommunicationServiceProvider"
            ],
            "publish": [
                {
                    "tag": "communication-config",
                    "path": "config/communication.php"
                }
            ]
        }
    }
}